{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "target": "es2016",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "lib/",
        "pretty": true,
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "isolatedModules": true
    },
    "include": [
        "bot/**/**/*",
        "dashboard/**/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}